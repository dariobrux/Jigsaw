<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JigsawView">
        <attr name="jv_borderBoard" format="reference" />
        <attr name="jv_pieces" format="integer" />
        <attr name="jv_spreadBoardCols" format="integer" />
        <attr name="jv_tileBorderWidth" format="dimension" />
        <attr name="jv_tileBorderColor" format="color" />
        <attr name="jv_tileSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TileView">
        <attr name="tv_bitmap" format="reference" />
        <attr name="tv_borderWidth" format="dimension" />
        <attr name="tv_borderColor" format="color" />
        <attr name="tv_capLeft" format="enum" >
            <enum name="none" value="0" />
            <enum name="empty" value="1" />
            <enum name="full" value="2" />
        </attr>
        <attr name="tv_capTop" format="enum" >
            <enum name="none" value="0" />
            <enum name="empty" value="1" />
            <enum name="full" value="2" />
        </attr>
        <attr name="tv_capRight" format="enum" >
            <enum name="none" value="0" />
            <enum name="empty" value="1" />
            <enum name="full" value="2" />
        </attr>
        <attr name="tv_capBottom" format="enum" >
            <enum name="none" value="0" />
            <enum name="empty" value="1" />
            <enum name="full" value="2" />
        </attr>
    </declare-styleable>
</resources>